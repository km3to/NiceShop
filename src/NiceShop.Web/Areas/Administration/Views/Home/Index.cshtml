@model NiceShop.Web.Models.Administration.Home.HomeIndexViewModel

@{
    ViewData["Title"] = "Конролен панел";
}

<h1>@this.ViewData["Title"]</h1>

<ul>
    @foreach (var shop in this.Model.Shops)
    {
        <li>
            <a asp-controller="Home" asp-action="Manage" asp-route-id="@shop.Id">
                @shop.Name
            </a>
        </li>
    }
</ul>
