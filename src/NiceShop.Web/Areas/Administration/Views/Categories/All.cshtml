@model IEnumerable<NiceShop.Web.Models.Administration.ViewModels.CategoryAllViewModel>

@{
    this.ViewData["Title"] = "Всички категории";
    int index = 1;
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />

<table class="table table-hover mt-5">
    <thead class="thead-dark">
    <tr class="text-center">
        <th class="col-1" scope="col">#</th>
        <th class="col-5">Име</th>
        <th class="col-1">Продукти</th>
        <th class="col-5">Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in this.Model)
    {
        <tr class="text-center">
            <th class="col-1" scope="row">@(index++)</th>
            <td class="col-5">@category.Name</td>
            <td class="col-1">@category.ProductsCount</td>
            <td class="col-5">
                <div class="col">
                    <a asp-controller="Categories" asp-action="Update" asp-route-id="@category.Id" class="btn btn-dark">Промени</a>
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-dark">Изтрий</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="row justify-content-center">
    <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-dark mt-5">Добави категория</a>
</div>

