@model NiceShop.Web.Models.Administration.ViewModels.IdAndNameViewModel

@{
    this.ViewData["Title"] = "Промени категория";
}

<h1>@this.ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" value="@this.Model.Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изтрий" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <a asp-action="All" class="btn btn-outline-dark">Обратно към всички категории</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
